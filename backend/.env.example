# Media3Watch Backend Environment Configuration
# Copy this file to .env and fill in your values

# API Key for authentication
M3W_API_KEY=dev-key

# PostgreSQL Database Configuration
# SECURITY WARNING: Never commit actual credentials to version control
# Change these values in production environments
POSTGRES_DB=media3watch
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password

# Backend Database Connection
DATABASE_URL=jdbc:postgresql://postgres:5432/media3watch
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_password

# Server Configuration
PORT=8080

# Optional: Advanced Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SEC=60
RETENTION_DAYS=90
HIKARI_MAX_POOL_SIZE=20
HIKARI_MIN_IDLE=5
LOG_LEVEL=INFO
ENABLE_METRICS=true
