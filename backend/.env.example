# Media3Watch Backend Environment Configuration
# Copy this file to .env and fill in your values
#
# !!! CRITICAL SECURITY WARNING !!!
# API Key for authentication
# The default "dev-key" is ONLY for local development.
# You MUST set a strong, unique API key before deploying to ANY accessible environment
# (staging, production, or any non-localhost deployment).
M3W_API_KEY=dev-key

# PostgreSQL Database Configuration
# SECURITY WARNING: Never commit actual credentials to version control
# Change these values in production environments
POSTGRES_DB=media3watch
POSTGRES_USER=m3w
POSTGRES_PASSWORD=m3w

# Backend Database Connection
# Note: DATABASE_USER and DATABASE_PASSWORD must match POSTGRES_USER and POSTGRES_PASSWORD above
DATABASE_URL=jdbc:postgresql://postgres:5432/media3watch
DATABASE_USER=m3w
DATABASE_PASSWORD=m3w

# Server Configuration
PORT=8080

# Optional: Advanced Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SEC=60
RETENTION_DAYS=90
HIKARI_MAX_POOL_SIZE=20
HIKARI_MIN_IDLE=5
LOG_LEVEL=INFO
ENABLE_METRICS=true
